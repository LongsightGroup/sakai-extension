<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

    <!-- define the list of HBM mapping files -->
    <bean id="kalturaHBMMappingList" class="java.util.ArrayList">
        <constructor-arg>
            <list>
                <value>org/sakaiproject/kaltura/dao/hbm/KalturaLtiRole.hbm.xml</value>
            </list>
        </constructor-arg>
    </bean>

    <!-- Create a sessionFactory from the Sakai base definition, give this your HBM files
        so the session factory can use them, creates a tool specific bean rather than
        using the shared session factory -->
    <bean id="kalturaSessionFactory" parent="org.sakaiproject.springframework.orm.hibernate.GlobalSessionFactory">
        <property name="mappingResources" ref="kalturaHBMMappingList" />
    </bean>

    <!-- create a DAO bean, use the hibernate implementation -->
    <bean id="kalturaDaoTarget" class="org.sakaiproject.kaltura.dao.KalturaLtiRoleDaoImpl" init-method="init">
        <property name="sessionFactory" ref="kalturaSessionFactory" />
        <property name="persistentClasses">
            <list>
                <value>org.sakaiproject.kaltura.models.db.KalturaLtiRole</value>
            </list>
        </property>
    </bean>

    <!-- This wraps our DAO so that the transactions are managed -->
    <bean id="kalturaLtiRoleDao" class="org.sakaiproject.genericdao.springutil.CurrentClassLoaderTxProxyFactoryBean">
        <property name="transactionManager" ref="org.sakaiproject.springframework.orm.hibernate.GlobalTransactionManager" />
        <property name="target" ref="kalturaDaoTarget" />
        <property name="transactionAttributes">
            <props>
                <prop key="get*">PROPAGATION_REQUIRED,readOnly</prop>
                <prop key="find*">PROPAGATION_REQUIRED,readOnly</prop>
                <prop key="count*">PROPAGATION_REQUIRED,readOnly</prop>
                <prop key="*">PROPAGATION_REQUIRED</prop>
            </props>
        </property>
    </bean>

    <!-- create a data preloading bean that has transaction protection -->
    <bean id="preloadLtiRoleData" class="org.sakaiproject.kaltura.dao.PreloadLtiRoleDataImpl" init-method="init">
        <property name="kalturaLtiRoleDao" ref="kalturaLtiRoleDao" />
    </bean>

</beans>
